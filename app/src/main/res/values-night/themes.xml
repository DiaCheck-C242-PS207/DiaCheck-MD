<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.DiaCheck" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="colorPrimary">@color/orange</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white_1</item>
        <item name="actionMenuTextColor">@color/textNight</item>
        <item name="colorControlActivated">@color/orange</item>
        <item name="boxBackgroundColor">@color/gray_1</item>
        <item name="android:statusBarColor">@color/black_1</item>
        <item name="android:navigationBarColor">@color/black_1</item>

        <item name="tabIndicatorColor">@color/dot_selected_color</item>
    </style>

    <style name="CardViewStyle">
        <item name="backgroundColor">@color/black_1</item>
    </style>

    <style name="BottomNavStyle" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/black_1</item>
        <item name="itemIconTint">@color/orange</item>
        <item name="itemTextColor">@color/orange</item>
    </style>

    <style name="DeleteButtonStyle" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/red</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:background">@drawable/search_black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/black_1</item>
    </style>

    <style name="FloatingButtonStyle" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/orange</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="ToolbarStyleTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="CircleImageViewStyle" parent="Widget.MaterialComponents.ShapeableImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>
