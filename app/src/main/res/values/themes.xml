<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.DiaCheck" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/orange</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="actionMenuTextColor">@color/textNight</item>
        <item name="colorControlActivated">@color/orange</item>
        <item name="boxBackgroundColor">@color/gray_1</item>
        <item name="colorPrimaryVariant">@color/orange_1</item>

        <!-- Warna untuk status bar dan navigasi -->
        <item name="android:statusBarColor">@color/orange</item>
        <item name="android:navigationBarColor">@color/orange</item>

        <!-- Warna untuk dots indicator -->
        <item name="tabIndicatorColor">@color/dot_selected_color</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:background">@drawable/search</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="FloatingButtonStyle" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/orange</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="BottomNavStyle" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/orange</item>
        <item name="itemIconTint">@color/white</item>
        <item name="itemTextColor">@color/white</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/orange</item>
    </style>

    <style name="ToolbarStyleTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.DiaCheck" parent="Base.Theme.DiaCheck" />
</resources>